<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exemple.android.popularmovies.DetailActivity">

    <TextView
        android:id="@+id/original_title_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent"
        tools:text="Chappie"
        android:textSize="@dimen/text_headline"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin" />

    <include
        android:id="@+id/headline_info"
        layout="@layout/headline_movie_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/overview_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textSize="@dimen/text_body1"
        android:textColor="@color/secondary_text"
        android:paddingStart="@dimen/detail_overview_margin"
        android:paddingLeft="@dimen/detail_overview_margin"
        android:paddingEnd="@dimen/detail_overview_margin"
        android:paddingRight="@dimen/detail_overview_margin"/>


</LinearLayout>